<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="vertical"
        android:layout_weight="3">


    <TextView
        android:id="@+id/stack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text=""
        android:textColor="#808080"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:textSize="50dp"

        />

    <TextView
        android:id="@+id/operator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#A9A9A9"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:textSize="35dp"

        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="#A9A9A9"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:textSize="40dp"
        />

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"

        >


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button

                    android:id="@+id/op7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="7"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />

                <Button

                    android:id="@+id/op8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="8"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />
                <Button

                    android:id="@+id/op9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="9"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/op4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="4"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />

                <Button

                    android:id="@+id/op5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="5"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />
                <Button

                    android:id="@+id/op6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="6"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <Button
                    android:id="@+id/op1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="1"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />

                <Button

                    android:id="@+id/op2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="2"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />
                <Button

                    android:id="@+id/op3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="3"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/op"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="."
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="point"
                    />

                <Button

                    android:id="@+id/op0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="0"
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="value"
                    />
                <Button

                    android:id="@+id/opequal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:text="="
                    android:background="#808080"
                    android:layout_weight="1"
                    android:onClick="click"
                    android:tag="equal"
                    />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical">

            <Button

                android:id="@+id/ordel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="DEL"
                android:background="#A9A9A9"
                android:layout_weight="1"
                android:onClick="click"
                android:tag="clear"
                />

            <Button

                android:id="@+id/ordiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="/"
                android:background="#A9A9A9"
                android:layout_weight="1"
                android:onClick="click"
                android:tag="operation"
                />
            <Button

                android:id="@+id/ormul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#fff"
                android:text="*"
                android:background="#A9A9A9"
                android:layout_weight="1"
                android:onClick="click"
                android:tag="operation"
                />
            <Button

                android:id="@+id/orsub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#fff"
                android:text="-"
                android:background="#A9A9A9"
                android:layout_weight="1"
                android:onClick="click"
                android:tag="operation"
                />
            <Button

                android:id="@+id/oradd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="+"
                android:textColor="#fff"
                android:background="#A9A9A9"
                android:layout_weight="1"
                android:onClick="click"
                android:tag="operation"
                />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>